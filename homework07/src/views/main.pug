doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="color-scheme", content="light dark")
    title= "Register"
    style.
      a{
        text-decoration:none;
      }
      body {
        min-height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        flex-direction:column;
        background-color:#66B8D9;
        color: black;
        overflow-y: scroll; 
        overflow-x: hidden; 
      }
      h1 {
        margin:auto;
        color:white;
      }
      hr{
        width:100%;
        margin:auto;
        border:1px solid black
      }
      div {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        gap:5px;
      }
      header {
        height:70px;
        padding-left:20px;
        padding-right:20px;
        width:96.7%;
        display:flex;
        justify-content:flex-end;
        align-items:center;
        column-gap:20px;
        color:#d796e0;
        background-color: rgb(49, 18, 95)
      }
      header span{
        transition:0.4s;
        cursor:pointer;
      }
      header a{
        background-color:#66B8D9;
        width:140px;
        height:50px;
        margin-right:20px;
        display:flex;
        justify-content:center;
        align-items:center;
        transition:0.4s;
      }
      header span:hover{
        font-size:18px;
      }
      header a:hover{
        box-shadow:0px 0px 10px black;
        font-size:18px;
      }
      .posts{
        padding:20px;
        width:350px;
        min-height:200px;
        background-color:#D0D7D9;
        display:flex;
        align-items:flex-start;
        flex-wrap:wrap;
        flex-direction:column;
        border-radius:10px;
        border:1px solid black;
        gap:15px;
      }
      main{
        display:flex;
        align-items:center;
        flex-wrap:wrap;
        flex-direction:column;
        gap:20px;
      }
      main>div{
        width:90%;
        display:flex;
        flex-wrap:wrap;
        flex-direction:row;
        justify-content:space-between;
      }
      .posts>h2{
        margin-right : auto;
      }
      .operator{
        border-top:1px solid black;
        display:flex;
        flex-wrap:wrap;
        flex-direction:row;
        justify-content:space-between;
        padding:5px;
      }
      .operator>a{
        width:40%;
        background-color:#66B8D9;
        height:40px;
        display:flex;
        align-items:center;
        justify-content:center;
        cursor:pointer;
        border-radius:10px;
        transition:0.4s
      }
      .operator>a:hover{
        box-shadow:0px 0px 10px black;
      }
      main>div>div{
        display:flex;
        flex-wrap:wrap;
        flex-direction:row;
      }
      .title{
        font-size:30px
      }
      .content{
        margin-left:20px;
        font-size:23px
      }
      .creator{
        width:100%;
        text-align:right;
      }
      main>h2{
        text-align:center
      }
      .posts>a{
        width:40%;
        background-color:#66B8D9;
        height:40px;
        display:flex;
        align-items:center;
        justify-content:center;
        cursor:pointer;
        border-radius:8px;
        transition:0.4s
      }
      .posts>a:hover{
        box-shadow:0px 0px 10px black;
      }

  body(style="min-height: 100vh;")
    header
      span About Us
      a(href="/main/postcreate") Create Post
      a(href="/login") Log Out
      a(href="/main/profile") Profile
    main
      h2 Your posts:
      div 
        each post in UserPosts
          div.posts
            span.title #{post.title}
            span.content #{post.content}
            span.creator By : #{user} 
            a(href=`/main/post/${post.id}/comments`) Comments
            div.operator
              a(href=`/main/postchange/${post.id}`) Change
              a(href=`/main/postdelete/${post.id}`) Delete
      hr
      h2 All Posts:
      div
        each post in posts
          div.posts
            span.title #{post.title}
            span.content #{post.content}
            span.creator by #{post.authorName} 
            a(href=`/main/post/${post.id}/comments`) Comments