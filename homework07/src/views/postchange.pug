doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="color-scheme", content="light dark")
    title= "PostChange"
    style.
      body {
        min-height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction:column;
        background-color:#66B8D9;
        color: black;
        overflow: auto; 
      }
      h1 {
        margin:auto;
        color:black;
      }
      hr{
        width:100%;
        margin:auto;
        border:1px solid black
      }
      .container {
        height: 350px;
        width: 300px;
        background:#D0D7D9;
        padding: 30px;
        box-shadow: 0px 0px 20px black inset;
        border-radius: 10px;
      }
      form {
        margin: auto;
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
      }
      div {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        gap:5px;
      }
      input {
        width: 90%;
        padding: 5px;
        border-radius: 5px;
        border: none;
        background-color:#66B8D9;
      }
      input:focus{
        box-sizing:none;
      }
      button {
        width: 170px;
        margin: auto;
        height: 40px;
        background-color:#66B8D9;
        color:black;
        border: none;
        border-radius: 5px;
        transition: 0.4s;
        cursor:pointer;
      }
      button:hover{
        box-shadow: 0px 0px 7px black inset;
        box-shadow: 0px 0px 7px black;
      }
     header {
        height:70px;
        width:100%;
        position:absolute;
        bottom:89.5%;
        background-color:rgb(49, 18, 95);
        display:flex;
        justify-content:flex-end;
        align-items:center;
        column-gap:20px;
        color:#d796e0;
        cursor:pointer;
      }
      header span{
        transition:0.4s;
      }
      header a{
        background-color:#66B8D9;
        width:140px;
        height:50px;
        margin-right:20px;
        display:flex;
        justify-content:center;
        align-items:center;
        transition:0.4s;
      }
      header span:hover{
        font-size:18px;
      }
      header a:hover{
        box-shadow:0px 0px 10px black;
        font-size:18px;
      }

  body(style="min-height: 100vh;")
    header
      span About Us
      a(href="/main") Back to main
    main.container
      form(action=`/main/postchange/${id}`, method="POST")
        h1 Changing Post
        hr
        div
          label Title
          input(type="text", name="title", class="title")
        div
          label Content
          input(type="text", name="content", class="content")
        button(type="submit") Submit
        
